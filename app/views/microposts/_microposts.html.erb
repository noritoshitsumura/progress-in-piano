<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-3">
      <% if micropost.user.image? %>                                                              
          <img class="mr-2 rounded" src="<%= micropost.user.image.thumb.url %>" alt="">
        <% else %>
          <img src="https://everydayicons.jp/wp/wp-content/themes/everydayicons/icons/thumbs/ei-person.png" alt="" width="200px" height="200px">
        <% end %> 　
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p><%= micropost.content %></p>
        </div>
        <div>
          <% if current_user == micropost.user %>
            <%= link_to "消去", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
          <%= render 'favorites/favorite_button', micropost: micropost %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

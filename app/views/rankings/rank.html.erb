<div class="text-center rank-title">
  <h1>総合ランキング</h1>
</div>


<table class="table table-striped table-ranking">
  <% @users.each.with_index(1) do |user,i| %>
    <tr>
      <td>
        第<%= i %>位
      </td>
      
      <td>
        <% if user.image? %>                                                              
          <img class="mr-2 rounded" src="<%= user.image.thumb.url(user, { size: 50 }) %>" alt="">
        <% else %>
          <img src="https://everydayicons.jp/wp/wp-content/themes/everydayicons/icons/thumbs/ei-person.png" width="100px" height="100px">
        <% end %> 
        
        <% if logged_in? %>
          <%= link_to user_path(user) do %>
            <%= user.name %>
          <% end %>
        <% else %>
          <%= link_to login_path do %>
            <%= user.name %>
          <% end %>
        <% end %>
      </td>
      
      <td>
        <%= user.practices.sum(:time) %>時間
      </td>
    </tr>
  <% end %>
</table>



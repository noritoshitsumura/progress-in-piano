<div class="text-center">
  <h1><%= @user.name %>がフォロー中のユーザー一覧</h1>
</div>

<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.image? %>                                                              
          <img class="mr-2 rounded" src="<%= user.image.thumb.url %>" alt="">
        <% else %>
          <%= image_tag 'ei-person.png',size: "200x200", alt: "" %>
        <% end %> 　
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィール', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>